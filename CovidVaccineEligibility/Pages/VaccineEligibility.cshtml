@page
@model CovidVaccineEligibility.Pages.VaccineEligibilityModel
@{
    ViewData["Title"] = "Vaccine Eligibility Calculator";
}


<h4>Vaccine Eligibility Calculator</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="form1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="vaccineEligibility.Name" class="control-label"></label>
                <input asp-for="vaccineEligibility.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="vaccineEligibility.Age" class="control-label"></label>
                <input asp-for="vaccineEligibility.Age" class="form-control" />
                <span asp-validation-for="vaccineEligibility.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vaccineEligibility.Gender" class="control-label"></label>
                <input asp-for="vaccineEligibility.Gender" class="form-control" />
                <span asp-validation-for="vaccineEligibility.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
            @if (ViewData.ModelState.IsValid)
            {
                <div class="form-group">
                    @Html.DisplayFor(model => model.vaccineEligibility.Vaccine, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
